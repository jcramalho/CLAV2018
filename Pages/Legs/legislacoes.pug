extends ../Templates/layout
block corpo
    h1.page-header Legislações
    .row
        h3.sub-header Lista
        #tabela-legislacoes.row.placeholders
            custom-table-simple(
                v-if="ready"

                :header="tableHeader"
                :complete-rows="tableData"
                :ready="ready"
                :cwidth="cwidth"
                
                class-table='table table-hover'
                add="true"

                @row-clicked="rowClicked($event)"
                @add-clicked="addLeg"
            )
            h4(
                v-else
            ) Loading...
        
