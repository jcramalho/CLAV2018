extends ../layout
block corpo
    h1.page-header Termos de Índice
    .row
        #termos.row.placeholders
            custom-table-simple(
                v-if="ready"

                :header="['Termo','Classe', 'Título da Classe']"
                :display-order="['termo', 'idClasse', 'tituloClasse']"
                :complete-rows="tableData"
                :ready="ready"
                :cwidth="['50%','10%','40%']"
                
                class-table='table table-hover'
                add="true"

                @row-clicked="rowClicked($event)"
                @add-clicked="addTermo"
            )
            h4(
                v-else
            ) A carregar...    
    //-

append scripts    
    script(src="/javascripts/termosIndice/listagem.vue")